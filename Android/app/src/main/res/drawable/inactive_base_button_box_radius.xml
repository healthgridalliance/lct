<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="#5E6571">
<item android:id="@android:id/mask">
    <shape android:shape="rectangle">
        <solid android:color="@color/inactive_button_background_color" />
        <corners
            android:bottomLeftRadius="@dimen/base_button_corner_radius"
            android:bottomRightRadius="@dimen/base_button_corner_radius"
            android:topLeftRadius="@dimen/base_button_corner_radius"
            android:topRightRadius="@dimen/base_button_corner_radius" />
    </shape>
</item>

<item android:id="@android:id/background">
    <shape android:shape="rectangle">
        <solid android:color="@color/inactive_button_background_color" />
        <corners
            android:bottomLeftRadius="@dimen/base_button_corner_radius"
            android:bottomRightRadius="@dimen/base_button_corner_radius"
            android:topLeftRadius="@dimen/base_button_corner_radius"
            android:topRightRadius="@dimen/base_button_corner_radius" />
    </shape>
</item>
</ripple>

